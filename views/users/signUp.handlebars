<header>
  <div class="header">
    <a href="/homepage" class="home-link">Home</a> <!-- Add homepage link -->
  </div>
</header>
<div class="form-container">
  <form action="/signup" method="POST" id="signup-form">
    <p class="sign-up-title">Sign Up!</p>

    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" placeholder="First Name" value="{{body.firstName}}">
    {{#if firstNameError}}
    <div class="invalid-first-name">
      {{firstNameError}}
    </div>
    {{else}}
    <div class="clientside-first-name-error">
    </div>
    {{/if}}

    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" placeholder="Last Name" value="{{body.lastName}}">
    {{#if lastNameError}}
    <div class="invalid-last-name">
      {{lastNameError}}
    </div>
    {{else}}
    <div class="clientside-last-name-error">
    </div>
    {{/if}}

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" placeholder="Email" value="{{body.email}}">
    {{#if emailError}}
    <div class="invalid-email">
      {{emailError}}
    </div>
    {{else if duplicateEmailError}}
    <div class="invalid-email">
      {{duplicateEmailError}}
    </div>
    {{else}}
    <div class="clientside-email-address-error">
    </div>
    {{/if}}

    <label for="username">Username:</label>
    <input type="text" id="username" name="username" placeholder="Username" value="{{body.username}}">
    {{#if usernameError}}
    <div class="invalid-username">
      {{usernameError}}
    </div>
    {{else if duplicateUsernameError}}
    <div class="invalid-username">
      {{duplicateUsernameError}}
    </div>
    {{else}}
    <div class="clientside-username-error">
    </div>
    {{/if}}

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" placeholder="Password" value="{{body.password}}">
    {{#if passwordError}}
    <div class="invalid-password">
      {{passwordError}}
    </div>
    {{else}}
    <div class="clientside-password-error">
    </div>
    {{/if}}

    <label for="sign-up-button"></label>
    <input type="submit" id="sign-up-button" name="signUpButton" value="Sign Up">
    <p class="log-in-text">Already have an account?</p>
    <a href="/login" class="log-in-button">Log In</a>
  </form>
</div>
